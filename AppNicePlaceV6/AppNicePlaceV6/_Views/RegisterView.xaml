<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppNicePlaceV6._Views.RegisterView"
             >
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Entry Text="{Binding Nome}" Placeholder="Nome"></Entry>
            <Entry Text="{Binding Email}" Keyboard="Email" Placeholder="Email@server.com"></Entry>
            <Entry IsPassword="true" Text="{Binding Password}" Placeholder="senha"></Entry>
            <Entry IsPassword="true" Text="" Placeholder="Confirme a senha "></Entry>
            <Button Text="Cadastrar" Command="{Binding RegisterCommand}"></Button>            
        </StackLayout>

    </ContentPage.Content>
</ContentPage>